{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build",
      "label": "tsc: watch - tsconfig.json"
    },
    {
      "type": "shell",
      "command": "yarn build && npm publish build/",
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build",
      "label": "deploy"
    },
    {
      "type": "shell",
      "command": "yarn test --watchAll",
      "group": "test",
      "label": "test --watchAll"
    }
  ]
}
