    "gh-pages": "^6.1.0",
    "jest": "^29.7.0",
    "semantic-release": "^22.0.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.3",
    "typedoc-plugin-zod": "^1.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "zod": "^3.22.4"
